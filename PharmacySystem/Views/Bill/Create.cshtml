@model PharmacySystem.Models.Bill

@{
    ViewData["Title"] = "Create Bill";
}

<div class="container mt-5">
    <h1 class="text-center mb-3">Create Bill</h1>
    <h4 class="text-center text-muted">Please fill in the details below:</h4>
    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label"></label>
                    <input asp-for="Amount" class="form-control" type="number" min="0" step="0.01" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductId" class="form-label"></label>
                    <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CustomerId" class="form-label"></label>
                    <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.CustomerId"></select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountId" class="form-label"></label>
                    <select asp-for="AccountId" class="form-select" asp-items="ViewBag.AccountId"></select>
                    <span asp-validation-for="AccountId" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Create Bill</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
