@model IEnumerable<PharmacySystem.Models.ImpRepo>

@{
    ViewData["Title"] = "Import Repository List";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-6">
            <h1 class="text-primary">Import Repository List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-success btn-lg"><i class="fas fa-plus"></i> Create New</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">Order Date</th>
                        <th class="text-center">Total Amount</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Supplier</th>
                        <th class="text-center" style="width: 20%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.OrderDate)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Supplier.Name)
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1"><i class="fas fa-edit"></i> Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-1"><i class="fas fa-info-circle"></i> Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1"><i class="fas fa-trash"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No import records found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
