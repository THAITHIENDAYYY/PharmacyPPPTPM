@model IEnumerable<PharmacySystem.Models.ImpRepoDetail>

@{
    ViewData["Title"] = "Inventory Repository Details";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-6">
            <h1 class="text-primary">Inventory Repository Details</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-success btn-lg"><i class="fas fa-plus"></i> Create New</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">Product</th>
                        <th class="text-center">Import Repository</th>
                        <th class="text-center" style="width: 20%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Product.Name)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.ImpRepo.Id)
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-1">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No details available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
