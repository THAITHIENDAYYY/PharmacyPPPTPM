@model PharmacySystem.Models.Inventory

@{
    ViewData["Title"] = "Create Inventory";
}

<div class="container mt-5">
    <h1 class="text-center mb-3">Create Inventory</h1>
    <h4 class="text-center text-muted">Inventory Details</h4>
    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" placeholder="Enter Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastUpdate" class="form-label"></label>
                    <input asp-for="LastUpdate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="LastUpdate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductId" class="form-label"></label>
                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Create Inventory</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
