@model PharmacySystem.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <h1 class="text-center mb-3">Create Product</h1>
    <h4 class="text-center text-muted">Product Details</h4>
    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Product Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" placeholder="Enter Product Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ExpiryDate" class="form-label"></label>
                    <input asp-for="ExpiryDate" class="form-control" type="date" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Manufacturer" class="form-label"></label>
                    <input asp-for="Manufacturer" class="form-control" placeholder="Enter Manufacturer Name" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Create Product</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
